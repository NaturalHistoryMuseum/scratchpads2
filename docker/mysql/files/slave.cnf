[mysqld]
# InnoDB settings for large table support
innodb_large_prefix = ON
innodb_file_format = Barracuda
innodb_file_per_table = true
max_allowed_packet = 16M

# Replication
server_id = 2
log_bin = mysql-bin
relay_log = relay-bin
read_only = 1
gtid_mode = ON
enforce_gtid_consistency = ON
log_slave_updates = 1
binlog_format = ROW