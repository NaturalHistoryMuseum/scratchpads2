/**
 * Add the latitude/longitude/country fields to the s..s.._user table
 */
function scratchpads_statistics_update_7002(){
  $fields = array(
    'country' => array(
      'type' => 'varchar',
      'length' => 2
    ),
    'latitude' => array(
      'type' => 'varchar',
      'length' => 10
    ),
    'longitude' => array(
      'type' => 'varchar',
      'length' => 10
    )
  );
  foreach($fields as $field => $spec){
    db_add_field('scratchpads_statistics_user', $field, $spec);
  }
}