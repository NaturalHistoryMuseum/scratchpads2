<?php

/**
 * Implementation of hook_form_FORM_ID_alter().
 */
function tui_form_taxonomy_overview_vocabularies_alter(&$form, &$form_state, $form_id){
  $vocabularies = taxonomy_get_vocabularies();
  foreach($vocabularies as $vocabulary){
    $form[$vocabulary->vid]['list'] = array(
      '#type' => 'link',
      '#title' => t('tree editor'),
      '#href' => "admin/structure/taxonomy/$vocabulary->machine_name/tui"
    );
  }
}

/**
 * Implementation of hook_menu().
 */
function tui_menu(){
  return array(
    'admin/structure/taxonomy/%taxonomy_vocabulary_machine_name/tui' => array(
      'title' => 'Tree editor',
      'page callback' => 'drupal_get_form',
      'page arguments' => array(
        'tui_editor_form',
        3
      ),
      'access arguments' => array(
        'administer taxonomy'
      ),
      'type' => MENU_LOCAL_TASK,
      'weight' => -20,
      'file' => 'tui.admin.inc'
    )
  );
}






