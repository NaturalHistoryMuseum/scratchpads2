/**
 * Implements hook_entity_insert()
 */
function ecoint_entity_insert($entity, $type){
  switch($type){
    case 'taxonomy_term':
      variable_set('ecoint_export', TRUE);
      break;
    case 'node':
        variable_set('ecoint_export', TRUE);
  }
}

