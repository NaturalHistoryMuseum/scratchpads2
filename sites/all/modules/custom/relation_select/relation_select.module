function relation_select_views_exposed_form($form, &$form_state, $view, $element, $on_change_elements) {
  $view->init_handlers();
  $form_state += array(
    'view' => &$view,
    'display' => &$view->display_handler->display,
    'exposed_form_plugin' => $view->display_handler->get_plugin('exposed_form'),
