      'title' => t('MapBox'),
      'description' => t('MapBox Maps'),
      'type' => 'layer',
      'path' => drupal_get_path('module', 'mapbox') .'/includes/layer_types',
      'file' => 'mapbox.inc',
      'layer_type' => array(
        'class' => 'openlayers_layer_type_mapbox',
        'parent' => 'openlayers_layer_type',
      ),
    ),
  );
}
