/*

  $form['creativecommons']['metadata'] = array(
    '#type' => 'fieldset',
    '#title' => t('Additional Information'),
    '#collapsible' => TRUE,
    // show additional info by default if any metadata fields are (a) required, or (b) non-empty; otherwise, hide.
