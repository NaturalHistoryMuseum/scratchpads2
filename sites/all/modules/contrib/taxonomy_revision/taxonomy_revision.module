/**
 * Access callback for taxonomy revision.
 */
function _taxonomy_revision_access($term, $perm) {
  if (!is_array($perm)) {
    $perm = array($perm);
  }
  $access = FALSE;
  foreach ($perm as $permission) {
    $access = user_access($permission) || $access;
    if ($access) {
      return $access;
    }
  }
  return $access;
}

